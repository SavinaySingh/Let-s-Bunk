<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.savinay.letsbunk.Activities.EnterDetails"
    android:orientation="vertical"
    android:background="@color/green"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/letsbunk"


        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/whats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="What's Your Name"
        android:textSize="40sp"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whats"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="__________________"
        android:background="@color/white"
        android:textSize="40sp"
        android:layout_alignRight="@+id/whats"
        android:layout_alignEnd="@+id/whats"
        android:layout_alignLeft="@+id/whats"
        android:layout_alignStart="@+id/whats" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="49dp"
        android:text="\u2713"
        android:textSize="40dp"

        />


</RelativeLayout>
